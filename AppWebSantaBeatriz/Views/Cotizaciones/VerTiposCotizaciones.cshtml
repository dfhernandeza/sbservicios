@model IEnumerable<AppWebSantaBeatriz.Models.Cotizaciones.TipoCotizacionModel>

@{
    ViewBag.Title = "VerTiposCotizaciones";
}

<h2 style="text-align:center;margin-bottom:30px">Tipos de Cotizaciones</h2>

<p>
    <a href="@Url.Action("CrearTipoCotizacion")" class="btn btn-success">Nuevo</a>
   
</p>
<table class="table">
    <tr><th>ID</th><th>Nombre</th><th>Descripción</th><th></th></tr>

@foreach (var item in Model) {
    <tr><td>@Html.DisplayFor(modelItem => item.ID)</td><td>@Html.DisplayFor(modelItem => item.TipoCotizacion)</td><td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
        <td>
            <a class="btn btn-primary" href="@Url.Action("EditaTipoCotizacion",new {id = item.ID })">Editar</a>
            <a class="btn btn-success" href="@Url.Action("DetalleTipoCotizacion",new {id = item.ID })">Detalle</a>
            <a class="btn btn-danger" href="@Url.Action("EliminaTipoCotizacion",new {id = item.ID })">Eliminar</a>
      
        </td>
    </tr>
}

</table>
