@model AppWebSantaBeatriz.Models.Cotizaciones.TipoCotizacionModel

@{
    ViewBag.Title = "DetalleTipoCotizacion";
}

<h2>Detalle Tipo de Cotizacion</h2>

<div class="container-fluid fondogris">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <strong>ID</strong>
                </div>
                <div class="card-body">
                    @Model.ID
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <strong>Tipo de Cotización</strong>
                </div>
                <div class="card-body">
                    @Model.TipoCotizacion
                </div>

            </div>
        </div>

    </div>
    <div class="row" style="margin-top:20px;margin-bottom:20px">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong>Descripción</strong>
                </div>
                <div class="card-body">
                    @Model.Descripcion
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <strong>Creado Por</strong>
                </div>
                <div class="card-body">
                    @Model.CreadoPor
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <strong>Creado En</strong>
                </div>
                <div class="card-body">
                    @Model.CreadoEn
                </div>
            </div>
        </div>
    </div>

    <div style="margin-top:20px;margin-bottom:20px" class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <strong>Editado Por</strong>
                </div>
                <div class="card-body">
                    @Model.EditadoPor
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <strong>Editado En</strong>
                </div>
                <div class="card-body">
                    @Model.EditadoEn
                </div>
            </div>
        </div>
    </div>

    <p class="margenes">
        <a class="btn btn-success" href="@Url.Action("EditaTipoCotizacion", new { id = Model.ID } )">Editar</a>
        <a class="btn btn-danger" href="@Url.Action("VerTiposCotizaciones", new { id = Model.ID } )">Volver</a>

    </p>

</div>

