@model AppWebSantaBeatriz.Models.CotizacionMaterialesModel
@{
    ViewBag.Title = "Index";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>

<button type="button" class="btn-block" id="boton">Modal</button>
<div id="mymodal" data-url='@Url.Action("CotiMaterial","Cotizaciones")'></div>
<script type="text/javascript">

    $("#boton").click(function () {

        var url = $("#mymodal").data("url");

        $("#mymodal").load(url, function () {
            $("#ModalRelation").modal("show");


        });

    })


</script>











@section Scripts {
    @Scripts.Render("~/bundles/jqueryval", "~/bundles/jquery", "~/ bundles/popper", "~/bundles/bootstrap", "~/Content/css")

}