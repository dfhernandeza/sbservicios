@model AppWebSantaBeatriz.Models.CotizacionEquiposModel

<head>
    <script src="https://code.jquery.com/jquery-2.1.4.js"></script>
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>

</head>
<script>


    $(function () {

        $("#Cantidad,#PUnitario").keyup(function (e) {

            var q = $("#Cantidad").val();
            var p = $("#PUnitario").val();
            var result = "";

            if (q !== "" && p !== "" && $.isNumeric(q) && $.isNumeric(p)) {
                result = parseFloat(q) * parseFloat(p);
            }
            $("#Total").val(result);

        });

    });


</script>


<div class="modal fade" id="ModalEquipos" style="margin-left:-10px;padding-left:0px">
    <div class="modal-dialog" style="margin-left:250px">
        <div class="modal-content" style="width:800px;margin-left:0px;padding-left:0px">
            <div class="modal-header" style="background-color:blue">
                <h4 class="modal-title expander_style text-white">Equipos y Servicios</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick=""><span aria-hidden="true">&times;</span></button>

            </div>
            <div class="modal-body">


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group form-inline">

                                @Html.HiddenFor(model => model.IDCot, new { htmlAttributes = new { @class = "form-control", @style = "width:200px", placeholder = "Item" } })

                                @Html.LabelFor(model => model.Item, htmlAttributes: new { @class = "sr-only" })
                                @Html.EditorFor(model => model.Item, new { htmlAttributes = new { @class = "form-control", @style = "width:200px", placeholder = "Item" } })
                                @Html.ValidationMessageFor(model => model.Item, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.Unidad, htmlAttributes: new { @class = "sr-only" })
                                @Html.EditorFor(model => model.Unidad, new { htmlAttributes = new { @class = "form-control", @style = "width:95px;margin-left:5px", placeholder = "Unidad" } })
                                @Html.ValidationMessageFor(model => model.Unidad, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.Cantidad, htmlAttributes: new { @class = "sr-only" })
                                @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control", @style = "width:95px;margin-left:5px", placeholder = "Cantidad", ID = "Cantidad" } })
                                @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.PUnitario, htmlAttributes: new { @class = "sr-only" })
                                @Html.EditorFor(model => model.PUnitario, new { htmlAttributes = new { @class = "form-control", @style = "width:95px;margin-left:5px", placeholder = "Precio", ID = "PUnitario" } })
                                @Html.ValidationMessageFor(model => model.PUnitario, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.Total, htmlAttributes: new { @class = "sr-only" })
                                @Html.EditorFor(model => model.Total, new { htmlAttributes = new { @class = "form-control", @style = "width:95px;margin-left:5px", placeholder = "Total", ID = "Total" } })
                                @Html.ValidationMessageFor(model => model.Total, "", new { @class = "text-danger" })
                                <input type="submit" value="Ingresar" class="btn btn-primary" style="margin-left:10px" />
                            </div>

                        </div>
                    </div>

                }

            </div>
           
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval", "~/bundles/jquery", "~/ bundles/popper", "~/bundles/bootstrap", "~/Content/css")

}

