@model AppWebSantaBeatriz.Views.Transaccion.TipoCuentaModel

@{
    ViewBag.Title = "VerTipoDeCuenta";
}


    

    <div class="container-fluid">
        <h2 class="margenes">Ver Tipo de Cuenta</h2>
        <div class="row align-items-end">
            <div class="col-md-3">

                <div class="card">
                    <div class="card-header botonazul">
                        ID
                    </div>
                    <div class="card-body">
                        @Model.TipoCuentaCod

                    </div>
                </div>


            </div>
            <div class="col-md-3">

                <div class="card">
                    <div class="card-header botonazul">
                        Nombre
                    </div>
                    <div class="card-body">
                        @Model.Nombre

                    </div>
                </div>


            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header botonazul">
                        Descripción
                    </div>
                    <div class="card-body">
                        @Model.Descripcion

                    </div>
                </div>
            </div>
        </div>
        <p class="margenes">
            <a class="btn btn-success" href="@Url.Action("EditaTipoCuenta","Transaccion",new { id = Model.TipoCuentaCod })">Editar</a>
            <a href="~/Transaccion/VerTiposDeCuentas" class="btn btn-danger">Volver</a>
        </p>
    </div>



