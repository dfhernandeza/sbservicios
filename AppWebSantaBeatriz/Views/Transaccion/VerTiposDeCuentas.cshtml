@model IEnumerable<AppWebSantaBeatriz.Views.Transaccion.TipoCuentaModel>

@{
    ViewBag.Title = "VerTiposDeCuentas";
}

<h2 class="margenes">Tipos de Cuentas</h2>

<p>
    <a href="~/Transaccion/CreaTipoDeCuenta" class="btn btn-danger">Nuevo</a>
    
</p>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Nombre
        </th>
        <th style="width:60%">
            Descripción
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td >
        @Html.DisplayFor(modelItem => item.Descripcion)
    </td>
    <td>
        <a class="btn btn-success" href="@Url.Action("EditaTipoCuenta","Transaccion",new { id = item.ID })">Editar</a>
        <a class="btn btn-primary" href="@Url.Action("VerTipoDeCuenta","Transaccion",new { id = item.ID })">Detalles</a>
        <a class="btn btn-danger" href="@Url.Action("EliminaTipoDeCuenta","Transaccion",new { id = item.ID })">Eliminar</a> 
    </td>
</tr>
}

</table>
