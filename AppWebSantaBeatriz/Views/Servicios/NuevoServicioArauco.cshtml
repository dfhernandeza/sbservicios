@model BibliotecaDeClases.Modelos.Servicios.ServicioModel

@{
    ViewBag.Title = "NuevoServicioArauco";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
