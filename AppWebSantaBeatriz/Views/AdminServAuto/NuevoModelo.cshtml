@model BibliotecaDeClases.Modelos.ServicioAutomotriz.ModeloModel

@{
    ViewBag.Title = "NuevoModelo";
}

<h2>Nuevo Modelo @Model.Marca</h2>
<form action="@Url.Action("NuevoModelo")" method="post">
    <div class="row">
        <div class="col-md-4">
            <label class="form-label">Modelo</label>
            <input class="d-none" type="text" name="IDMarca" value="@Model.IDMarca" />
            <input class="form-control" name="Nombre" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12"><label class="form-label">Descripcion</label><textarea class="form-control" name="Descripcion"></textarea></div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12"><input type="submit" class="btn btn-outline-danger" value="Enviar" /></div>
    </div>
</form>

