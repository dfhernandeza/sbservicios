@model IEnumerable<BibliotecaDeClases.Modelos.ServicioAutomotriz.FotoLogoModel>

@{
    ViewBag.Title = "VerFotosLogos";
}

<h2 class="text-center">Logos</h2>

<p>
    <a class="btn btn-outline-primary" href="@Url.Action("NuevaFotoLogo")">Nueva</a>
</p>
<table class="table">
    <tr>
        <th>
            Marca
        </th>
        <th>
          Logo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Marca
        </td>
        <td>
           <img src="@item.URL" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
