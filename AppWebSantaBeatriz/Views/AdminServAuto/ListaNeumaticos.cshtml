@model IEnumerable<BibliotecaDeClases.Modelos.ServicioAutomotriz.NeumaticosModel>
@{
    ViewBag.Title = "ListaNeumaticos";


}
<style>
    .body {
        background: #F5F6F7;
    }
    .carousel-control-next-icon, .carousel-control-prev-icon {
    background-color:black;
    }
</style>
<div class="container-fluid fondoplomo">
    <div class="row">
        @{ int j = 1; }
        @foreach (var item in Model)
        {

            <div class="col-md-4 p-2 fila-cont-neu">
                <div class="cont-neuma">
                    <div class="row h-100">
                        <div class="col-5 h-100">
                            <div id="carouselExampleControls@(j)" class="carousel slide h-100" data-bs-ride="carousel">
                                <div class="carousel-inner h-100">
                                    <div class="carousel-item active h-100">
                                        <img src="@item.Fotos.FirstOrDefault().URL"  class="d-block h-100 w-100">
                                    </div>
                                    @if (item.Fotos.ToArray().Length > 1)
                                    {
                                        for (int i = 1; i < item.Fotos.ToArray().Length; i++)
                                        {
                                            <div class="carousel-item h-100">
                                                <img src="@item.Fotos.ToArray()[i].URL" class="d-block w-100 h-100">
                                            </div>
                                        }
                                    }



                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls@(j)" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls@(j)" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        </div>
                        <div class="col-7">

                            <img height="40" width="150" src="@item.URLLogo" />

                            <p class="fuente-precio">
                                @(item.Ancho + "/" + item.Perfil + "R" + item.Aro + " " + item.IndiceV )<br />
                            </p>

                            <p class="fuente-cont">
                                Modelo @item.Modelo<br />
                                Velocidad Máx. @(item.VMax + " km/h")
                                Origen  @item.Origen
                            </p>
                            <p class="fuente-precio">@item.Precio.ToString("C")</p>
                 
                               @if (item.Stock > 0) {
                            <p class="stock-verde ">


                                Stock @item.Stock.ToString("0.##") Unidades

                            </p>
                               }
                               else
                               {
                            <p class="stock-rojo">

                                Stock @item.Stock.ToString("0.##") Unidades

                            </p>

                               }

                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="Editar" href="@Url.Action("EditarNeumatico", new { id = item.ID })">
                            <img height="14" width="14" class="" src="data:image/svg+xml;base64," />
                            @*<img src="~/Content/FotoSA/editar.png" height="14" width="14"  />*@
                        </a>
                        </div>
                    </div>
                </div>

            </div>

            j++;
        }
    </div>

</div>

<script>
    $(function () { $('[data-bs-toggle="tooltip"]').tooltip() });
    $(document).ready(function () {
        $('.carousel').carousel({ interval: false});
    });
</script>