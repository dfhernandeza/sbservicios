@model IEnumerable<BibliotecaDeClases.Modelos.ServicioAutomotriz.MarcasAutosModel>

@{
    ViewBag.Title = "VerMarcasAutos";
}
<head>
    <link href="~/Estilos/EstilosSB.css" rel="stylesheet" />
    <style>
        .header_ {
            background: rgb(111,48,212);
            background: linear-gradient(37deg, rgba(111,48,212,1) 28%, rgba(213,213,213,1) 72%);
        }
    </style>
</head>


<h2 class="text-center">Marcas de Autos</h2>


<table class="tabla">
    <tr class="header_">
        <th>
            Marca
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MarcaAuto)
        </td>
        <td>
            <a class="btn btn-success" href="@Url.Action("VerMarcaAuto", new {id = item.ID })"><img src="~/Content/Pictures/detail.png" /></a>           
        </td>
    </tr>
}

</table>
