@model BibliotecaDeClases.Modelos.ServicioAutomotriz.CategoriaMarcaModel

@{
    ViewBag.Title = "NuevaCategoriaMarca";
}

<head>
    <script src="~/Scripts/jquery.validate.js"></script>
    <style>
        .error{
            color:red
        }
        input, textarea{
            text-transform:uppercase
        }
    </style>
</head>
<h2 class="text-center">Nueva Categoria Marca</h2>




<div class="container-fluid">
    <form method="post" action="@Url.Action("NuevaCategoriaMarca")" id="nuevaCategoriaMarcaForm">
        <div class="row">
            <div class="col-md-12">
                <label class="form-label">Categoría</label>
                <input class="form-control" name="Categoria" />
            </div>
        </div>
    
        <div class="row">
            <div class="col-md-12">
                <label class="form-label">Descripción</label>
                <textarea name="Descripcion" class="form-control"></textarea>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <input class="btn btn-outline-success" type="submit" value="Ingresar" />
            </div>
        </div>
    </form>

</div>
<script>
    $(document).ready(function () {
        $('#nuevaCategoriaMarcaForm').validate({
            rules: {
                Categoria: "required",
                Descripcion: "required"
            },
            messages: {
                Categoria: "Debe proporcionar una categoría",
                Descripcion: "Debe proporcionar una descripción"
            }
        });
    });

</script>